= form_for @band do |f|
  -if @band.errors.any?
    #error_explanation
      %h2= "#{pluralize(@band.errors.count, "error")} prohibited this band from being saved:"
      %ul
        - @band.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :biography
    = f.text_area :biography
  .field
    = f.label :image_url
    = f.text_field :image_url
  .actions
    = f.submit 'Save'
