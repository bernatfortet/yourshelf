.shelf#Shelf
	.background
	.inner
		.albums
			- User.first.albums.each do |album|
				.album
					.cover
						=image_tag("cover.jpg")

.band.Band
	.header

	.albums
		= render @band.albums

	.info
		.about
			= @band.biography
		.social
			%a.facebook(href="#" title="Facebook")
				%span Facebook
			%a.twitter(href="#" title="Twitter")
				%span Twitter

		.members
			- @band.musicians.each do |member|
				= member.name

#Player.player
	.current-track
		.cover
			=image_tag("cover.jpg")
		.meta
			%a.album-name(href="#" title="FastFall") FastFall
			by
			%a.band-name(href="#" title="Lifeformed")
				= @band.name
		.track-name Dark Flute

	.controls
		#PrevBtn.previous
		#PlayBtn.play
		#NextBtn.next
		.timeline
			.progress
			.current-time 00:30
			.duration 03:30
		.sound
			.mute
			.bar
				.volume
