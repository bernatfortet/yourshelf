.album.Album{ :id => "Album#{album.id}", :"data-id" => "#{album.id}" }
	%img.cover(src="../assets/cover.jpg")

	.songs.SongList
		.title
			= album.title
		.list
			- album.songs.each do |song|
				.song.Song{ :id => "Song#{song.id}", :"data-id" => "#{song.id}" }
					= song.name

	.desc
		= album.description

	.bundle-list.BundlesList
		.bundle.Bundle
			.price 
				.number $3,99
				span or more
			.desc
				| Add it to the shelf with 3 bonus tracks.